Manager:
    WelcomeScreen
    DownloaderScreen

<WelcomeScreen>:
    name: "Welcome"
    FloatLayout:
        Image:
            size_hint: None, None
            source: 'welcome-bg.jpg'
            pos_hint: {'center': (.5, .5)}

            taller: self.image_ratio > (root.width / root.height)

            width: (root.height * self.image_ratio) if self.taller else root.width
            height: (root.width / self.image_ratio)  if not self.taller else root.height
            allow_stretch:True

    FloatLayout:
        Image:
            source: 'title.png'
            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
            size:200,200            

    FloatLayout:
        Image:
            size_hint: .45,.45
            source: 'dev-names.png'
            pos_hint: {'center_x': 0.7, 'center_y': 0.15}    
        


<DownloaderScreen>:
    name: "Downloader"            
    FloatLayout:
        Image:
            size_hint: None, None
            source: 'main_screen_bg.jpg'
            pos_hint: {'center': (.5, .5)}

            taller: self.image_ratio > (root.width / root.height)

            width: (root.height * self.image_ratio) if self.taller else root.width
            height: (root.width / self.image_ratio)  if not self.taller else root.height
            allow_stretch:True      
        
    BoxLayout:
        orientation: "vertical"
        
        MDToolbar:
            title: "Music App"
            anchor_title: "center"
            elevation: 10
            left_action_items: [["arrow-left-bold", lambda x: app.welcome_page_return()]]
            right_action_items: [["help-circle-outline", lambda x: app.help_dialog_box_for_downloader()]]
        Widget:
        
    
    MDTextField:
        id: FilePathTextField
        hint_text: root.hint_text
        text: root.text
        helper_text: "Please use the button below to select your directory"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": 0.5, "center_y": 0.8}
        required: True
        icon_right: "folder"
        error: root.error     
        

    
    MDRectangleFlatButton:
        text: "Choose Video/Song Location"
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        on_press: root.OpenDirectory()
        
    MDTextField:
        id: SongName
        hint_text: "Enter your video/song's name"
        text: root.text3
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        icon_right: "music-note-sixteenth"
        error: root.error
        on_text: root.get_name()
    
    